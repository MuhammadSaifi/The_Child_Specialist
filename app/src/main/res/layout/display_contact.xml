<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/display_db"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/back_page"
        android:text="Disease Description"
        android:textSize="22sp"
        android:paddingStart="15dp"
        android:paddingTop="35dp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="117dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/disease"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/name_disease"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="shoaib"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_disease"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/name_disease"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/relative_back"
        android:padding="15dp"
        android:layout_marginEnd="20dp"
        android:layout_above="@+id/textView5"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:gravity="start"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/welcom"
        />

</RelativeLayout>